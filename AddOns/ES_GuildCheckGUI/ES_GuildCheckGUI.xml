<?xml version="1.0" encoding="us-ascii"?>
<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
  <Script file="ES_GuildCheckGUI.lua" />
  <Frame name="EGC_DumpFrame"
         frameStrata="HIGH"
         toplevel="true"
         enableMouse="true"
         movable="true"
         parent="UIParent"
         hidden="true">
    <Size>
      <AbsDimension x="400"
                    y="400" />
    </Size>
    <Anchors>
      <Anchor point="TOP" />
    </Anchors>
    <Backdrop name="$parentBackdrop"
              bgFile="Interface\TutorialFrame\TutorialFrameBackground"
              edgeFile="Interface\DialogFrame\UI-DialogBox-Border"
              tile="true">
      <EdgeSize>
        <AbsValue val="16" />
      </EdgeSize>
      <TileSize>
        <AbsValue val="32" />
      </TileSize>
      <BackgroundInsets>
        <AbsInset left="5"
                  right="5"
                  top="5"
                  bottom="5" />
      </BackgroundInsets>
    </Backdrop>
    <Layers>
      <Layer level="BACKGROUND">
        <FontString name="EGC_Title"
                    inherits="GameFontNormal">
          <Size>
            <AbsDimension x="200"
                          y="12" />
          </Size>
          <Anchors>
            <Anchor point="TOP">
              <Offset>
                <AbsDimension x="0"
                              y="-10" />
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <Frame>
        <Size>
          <AbsDimension x="370"
                        y="340" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="5"
                            y="-25" />
            </Offset>
          </Anchor>
        </Anchors>
        <Backdrop edgeFile="Interface\Tooltips\UI-Tooltip-Border"
                  tile="true">
          <EdgeSize>
            <AbsValue val="16" />
          </EdgeSize>
          <TileSize>
            <AbsValue val="16" />
          </TileSize>
          <BackgroundInsets>
            <AbsInset left="5"
                      right="5"
                      top="5"
                      bottom="5" />
          </BackgroundInsets>
        </Backdrop>
      </Frame>
      <ScrollFrame name="EGC_ScrollFrame"
                   inherits="UIPanelScrollFrameTemplate">
        <Size>
          <AbsDimension x="355"
                        y="320" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="15"
                            y="-35" />
            </Offset>
          </Anchor>
        </Anchors>
        <ScrollChild>
          <EditBox name="EGC_EditBox"
                   multiLine="true"
                   autoFocus="false"
                   nonspacewrap="true">
            <Size>
              <AbsDimension x="350"
                            y="310" />
            </Size>
            <Scripts>
              <OnTextChanged>
              	local scrollBar = getglobal(this:GetParent():GetName().."ScrollBar") 
              	this:GetParent():UpdateScrollChildRect(); 
              	local min, max = scrollBar:GetMinMaxValues(); 
              	if ( max > 0 and (this.max ~= max) ) then 
              		this.max = max; scrollBar:SetValue(max); 
              	end
              </OnTextChanged>
              <OnEscapePressed>this:ClearFocus();</OnEscapePressed>
              <OnEditFocusGained></OnEditFocusGained>
              <OnEditFocusLost></OnEditFocusLost>
            </Scripts>
            <FontString inherits="GameFontHighlightSmall" />
          </EditBox>
        </ScrollChild>
      </ScrollFrame>
      <Button name="EGCOffline_Button"
              inherits="OptionsButtonTemplate"
              text="Offline">
        <Size>
          <AbsDimension x="80"
                        y="25" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="150"
                            y="-365" />
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnClick>EGCOffline_OnClick();</OnClick>
        </Scripts>
      </Button>
      <Button name="EGCOnline_Button"
              inherits="OptionsButtonTemplate"
              text="Online">
        <Size>
          <AbsDimension x="80"
                        y="25" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="230"
                            y="-365" />
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnClick>EGCOnline_OnClick();</OnClick>
        </Scripts>
      </Button>
      <Button name="EGCExit_Button"
              inherits="OptionsButtonTemplate"
              text="Exit">
        <Size>
          <AbsDimension x="80"
                        y="25" />
        </Size>
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="310"
                            y="-365" />
            </Offset>
          </Anchor>
        </Anchors>
        <Scripts>
          <OnClick>EGCExit_OnClick();</OnClick>
        </Scripts>
      </Button>
    </Frames>
    <Scripts>
      <OnLoad>EGCDump_OnLoad();</OnLoad>
      <OnDragStart>EGCDump_OnDragStart();</OnDragStart>
      <OnDragStop>EGCDump_OnDragStop();</OnDragStop>
      <OnMouseUp>EGCDump_OnDragStop();</OnMouseUp>
    </Scripts>
  </Frame>
</Ui>